{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "glusterpod"
  },
  "spec": {
    "containers": [
      {
        "name": "iscsi-rw",
        "image": "fedora",
        "volumeMounts": [
          {
            "mountPath": "/mnt/gluster-store",
            "name": "iscsi-rw"
          }
        ],
        "command": [
          "sleep",
          " 100000"
        ]
      }
    ],
    "volumes": [
      {
        "name": "iscsi-rw",
        "persistentVolumeClaim": {
          "claimName": "iscsi-pv-claim"
        }
      }
    ]
  }
}
